{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="assets/home.css">
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-sm-6">
			<div id="task_list">
				<h2 align="center">Tasks</h2>
				{% for t in tasks %}
					<div class="task">
						<div class="username">
							Username: {{ t.getUsername() }}
						</div>
						<div class="email">
							Email: {{ t.getEmail() }}
						</div>
						<div class="status">
							Status: {{ t.getStatus() }}
						</div>
						<div class="text">
							Task: {{ t.getText() }}
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
		<div class="col-sm-6">
			<div id="task_creation_form">
				<h2 align="center">Create new task</h2>
				<div class="form">
					{{ form_start(form) }}
			        {{ form_widget(form) }}
			        {{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}